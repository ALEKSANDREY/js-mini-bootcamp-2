// write a function oldest that takes in the group array and returns the person object who is the oldest

// write a function youngest that takes in the group array and returns the person object who is the youngest

function oldest(group) {
  
    // Store the outcome 
  var oldestPerson = group[0];

	for (var i = 0; i < group.length; i++) { //loop through the group
  
  // for (var key in group[i]) {
  // console.log(group[i][key])
//}


      if (group[i].birthday < oldestPerson.biirthday){
        
        //console.log(oldestPerson[i]);
      oldestPerson = group[i];
      }
      	 
  }
  return oldestPerson;
}
oldest(group);
